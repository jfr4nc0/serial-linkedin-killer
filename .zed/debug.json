[
  {
    "label": "Python Active File",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch"
  },
  {
    "label": "Core Agent API",
    "adapter": "Debugpy",
    "module": "uvicorn",
    "request": "launch",
    "args": ["src.core.api.app:app", "--host", "0.0.0.0", "--port", "8080", "--reload"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "envFile": "$ZED_WORKTREE_ROOT/.env"
  },
  {
    "label": "LinkedIn MCP Server",
    "adapter": "Debugpy",
    "module": "src.linkedin_mcp.linkedin.linkedin_server",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "envFile": "$ZED_WORKTREE_ROOT/.env"
  },
  {
    "label": "CLI - Outreach Interactive",
    "adapter": "Debugpy",
    "program": "$ZED_WORKTREE_ROOT/scripts/cli.py",
    "request": "launch",
    "args": ["outreach", "--interactive"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "envFile": "$ZED_WORKTREE_ROOT/.env"
  },
  {
    "label": "CLI - Job Apply",
    "adapter": "Debugpy",
    "program": "$ZED_WORKTREE_ROOT/scripts/cli.py",
    "request": "launch",
    "args": ["run"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "envFile": "$ZED_WORKTREE_ROOT/.env"
  },
  {
    "label": "CLI - Import Dataset",
    "adapter": "Debugpy",
    "program": "$ZED_WORKTREE_ROOT/scripts/cli.py",
    "request": "launch",
    "args": ["import-dataset"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "envFile": "$ZED_WORKTREE_ROOT/.env"
  },
  {
    "label": "Tests",
    "adapter": "Debugpy",
    "module": "pytest",
    "request": "launch",
    "args": ["tests/", "-v"],
    "cwd": "$ZED_WORKTREE_ROOT"
  }
]
