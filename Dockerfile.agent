# Core Agent Dockerfile
FROM python:3.12-slim

# Install system dependencies for PDF processing and AI models (no browser needed)
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    librdkafka-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy dependency files
COPY pyproject.toml poetry.lock ./

# Install Poetry
RUN pip install poetry

# Configure Poetry
RUN poetry config virtualenvs.create false

# Install dependencies
RUN poetry install --only=main

# Copy source code and config
COPY src/ ./src/
COPY config/ ./config/
COPY scripts/start_agent.sh /app/scripts/start_agent.sh

# Create necessary directories
RUN mkdir -p /app/data && chmod 755 /app/data

# Make start script executable
RUN chmod +x /app/scripts/start_agent.sh

# Set environment variables
ENV PYTHONPATH=/app
EXPOSE 8080

# Start the core agent API
CMD ["/app/scripts/start_agent.sh"]
